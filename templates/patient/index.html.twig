{% extends 'base.html.twig' %}

{% block title %}My Profile - Medical System{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-user-circle"></i> My Dashboard
                    </h5>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="{{ path('patient_profile', {id: patient.id}) }}">
                            <i class="fas fa-user"></i> My Account
                        </a>
                        <a class="nav-link" href="{{ path('patient_rendezvous', { id: patient.id }) }}">
                            <i class="fas fa-calendar-alt"></i> My Appointments
                        </a>
                        <a class="nav-link" href="{{ path('patient_edit', { id: patient.id }) }}">
                            <i class="fas fa-edit"></i> Edit Profile
                        </a>
                        <a class="nav-link" href="{{ path('patient_change_password', { id: patient.id }) }}">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-id-card"></i> Profile Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">First Name</h6>
                            <p class="fs-5 fw-bold">{{ patient.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Last Name</h6>
                            <p class="fs-5 fw-bold">{{ patient.nom }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Email</h6>
                            <p class="fs-5">{{ patient.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Phone</h6>
                            <p class="fs-5">{{ patient.telephone }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Date of Birth</h6>
                            <p class="fs-5">{{ patient.dateNaissance|date('d/m/Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Address</h6>
                            <p class="fs-5">{{ patient.adresse }}</p>
                        </div>
                    </div>

          
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
