{% extends 'base.html.twig' %}

{% block title %}Choose a time slot{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                    <div class="card-header form-title">
                    <h3>Choose an available slot</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Choose one of the doctor's available time slots. Slots in the past are hidden.</p>

                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.disponibilite, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.disponibilite, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom'}}) }}
                    </div>
                    {{ form_end(form) }}

                    <div class="mt-3 text-center">
                        <a href="{{ path('rendez_vous_step_1') }}" class="link-secondary">Choose a different doctor</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
