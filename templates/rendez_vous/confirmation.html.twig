{% extends 'base.html.twig' %}

{% block title %}Confirm Appointment{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body text-center">
                    <h2 class="mb-4">Confirm your appointment</h2>

                    <div class="mb-3">
                        <p><strong>Doctor:</strong> Dr. {{ medecin.nom }} {{ medecin.prenom }}{% if medecin.specialite is defined and medecin.specialite %} â€” {{ medecin.specialite }}{% endif %}</p>
                        <p><strong>Date & Time:</strong> {{ disponibilite.debut|date('d/m/Y H:i') }}</p>
                    </div>

                    {{ form_start(form) }}
                        {{ form_widget(form.confirm, {'attr': {'class': 'btn btn-success btn-lg'}}) }}
                    {{ form_end(form) }}

                    <div class="mt-3">
                        <a href="{{ path('mes_rendezvous') }}" class="link-secondary">See my appointments</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
