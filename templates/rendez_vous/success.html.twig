{% extends 'base.html.twig' %}

{% block title %}Appointment confirmed{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success shadow-lg rounded-3">
                <div class="card-body text-center">

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} mb-3" role="alert">{{ message }}</div>
                        {% endfor %}
                    {% endfor %}

                    <h2 class="text-success mb-4">âœ… Appointment confirmed!</h2>

                    <p class="fs-5"><strong>Doctor:</strong> Dr. {{ rendezVous.medecin.nom }} {{ rendezVous.medecin.prenom }}</p>
                    <p class="fs-5"><strong>Date & Time:</strong> {{ rendezVous.dateHeure|date('d/m/Y H:i') }}</p>

                    <div class="mt-4">
                        <a href="{{ path('mes_rendezvous') }}" class="btn btn-primary me-2">Back to my appointments</a>

                        <a href="{{ path('rendez_vous_annuler', { id: rendezVous.id }) }}" class="btn btn-outline-danger">
                            Cancel this appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
