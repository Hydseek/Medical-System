{% extends 'base.html.twig' %}

{% block title %}Availability List{% endblock %}

{% block body %}
<h1>Availability List</h1>

<a href="{{ path('app_disponibilite_new') }}" class="btn btn-primary mb-3">Add availability</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Doctor</th>
            <th>Start</th>
            <th>End</th>
            <th>Available?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for disponibilite in disponibilites %}
            <tr>
                <td>{{ disponibilite.id }}</td>
                <td>{{ disponibilite.medecin.nom }} {{ disponibilite.medecin.prenom }}</td>
                <td>{{ disponibilite.debut ? disponibilite.debut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ disponibilite.fin ? disponibilite.fin|date('d/m/Y H:i') : '' }}</td>
                <td>{{ disponibilite.estLibre ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_disponibilite_show', {'id': disponibilite.id}) }}" class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('app_disponibilite_edit', {'id': disponibilite.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" action="{{ path('app_disponibilite_delete', {'id': disponibilite.id}) }}" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this availability?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disponibilite.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">No availability found</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
