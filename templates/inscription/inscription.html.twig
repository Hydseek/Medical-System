{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
{% endblock %}

{% block title %}Registration | Medical Center Health Together{% endblock %}

{% block body %}
<!-- Registration Form -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header form-title text-center">
                    <h4>Create an Account</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="form-group mb-3">
                        {{ form_label(form.nom, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.prenom, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.plainMotDePasse, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.plainMotDePasse, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.plainMotDePasse) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.dateNaissance, 'Date of Birth', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.dateNaissance) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.adresse, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.adresse) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.telephone, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control form-select'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>

                    <div class="form-group mb-3 text-center">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-custom btn-lg btn-block'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
