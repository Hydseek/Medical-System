{% extends 'base.html.twig' %}

{% block title %}Admin Information - Medical System{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-lock"></i> Admin Panel
                    </h5>
                    <nav class="nav flex-column">
                        <a class="nav-link" href="{{ path('admin_profile_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a class="nav-link active" href="{{ path('admin_profile_info') }}">
                            <i class="fas fa-user-shield"></i> My Admin Info
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield"></i> Admin Information
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted small mb-4">View your administrator information below. Click "Edit" to make changes.</p>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">First Name</h6>
                            <p class="fs-5 fw-bold">{{ admin.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Last Name</h6>
                            <p class="fs-5 fw-bold">{{ admin.nom }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Email</h6>
                            <p class="fs-5">{{ admin.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Phone</h6>
                            <p class="fs-5">{{ admin.telephone }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Date of Birth</h6>
                            <p class="fs-5">{{ admin.dateNaissance|date('d/m/Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-2">Address</h6>
                            <p class="fs-5">{{ admin.adresse }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h6 class="text-muted text-uppercase mb-2">Role</h6>
                            <p class="fs-5">
                                <span class="badge bg-danger">
                                    <i class="fas fa-shield-alt"></i> Administrator
                                </span>
                            </p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2">
                        <a href="{{ path('admin_profile_edit') }}" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a href="{{ path('admin_profile_change_password') }}" class="btn btn-outline-primary">
                            <i class="fas fa-key me-1"></i> Change password
                        </a>
                        <a href="{{ path('admin_profile_dashboard') }}" class="btn btn-outline-danger ms-auto">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
