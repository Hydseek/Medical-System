{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Medical System{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="fas fa-lock"></i> Admin Panel
                    </h5>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="{{ path('admin_profile_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a class="nav-link" href="{{ path('admin_profile_edit') }}">
                            <i class="fas fa-user-shield"></i> My Admin Info
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt"></i> Admin Dashboard
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-muted text-uppercase mb-3">Welcome, Admin {{ admin.prenom }} {{ admin.nom }}</h5>
                            <p class="fs-6 text-secondary">
                                This is the admin-only dashboard. As an administrator, you have access to manage all system components
                                through the admin control panel. Patient dashboard access is restricted for admin users.
                            </p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card border-left-danger bg-light">
                                <div class="card-body">
                                    <h6 class="text-uppercase text-muted mb-2">
                                        <i class="fas fa-users"></i> Manage Patients
                                    </h6>
                                    <p class="card-text">View, edit, and manage patient records.</p>
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-sm btn-outline-danger">
                                        Go to Admin Panel
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card border-left-danger bg-light">
                                <div class="card-body">
                                    <h6 class="text-uppercase text-muted mb-2">
                                        <i class="fas fa-user-md"></i> Manage Doctors
                                    </h6>
                                    <p class="card-text">View, edit, and manage doctor profiles.</p>
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-sm btn-outline-danger">
                                        Go to Admin Panel
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card border-left-danger bg-light">
                                <div class="card-body">
                                    <h6 class="text-uppercase text-muted mb-2">
                                        <i class="fas fa-calendar"></i> Manage Appointments
                                    </h6>
                                    <p class="card-text">View and manage all system appointments.</p>
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-sm btn-outline-danger">
                                        Go to Admin Panel
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card border-left-danger bg-light">
                                <div class="card-body">
                                    <h6 class="text-uppercase text-muted mb-2">
                                        <i class="fas fa-clock"></i> Manage Availability
                                    </h6>
                                    <p class="card-text">Control doctor availability slots.</p>
                                    <a href="{{ path('admin_dashboard') }}" class="btn btn-sm btn-outline-danger">
                                        Go to Admin Panel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2">
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-danger">
                            <i class="fas fa-cog"></i> Full Admin Panel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-danger {
        border-left: 4px solid #dc3545 !important;
    }
</style>
{% endblock %}
